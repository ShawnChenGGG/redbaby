<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/rl_search_result" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/iv_search_result"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_search_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_search_result_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现价"
                android:textStyle="bold|italic"
                android:textColor="#ff0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_search_result_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="原价"
                android:textColor="#ff0000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search_result_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有0人评价"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:background="@drawable/arrow" />

    <ImageView
        android:id="@+id/iv_search_result"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>