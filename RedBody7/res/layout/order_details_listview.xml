<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout 
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_content_shap"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_logistics" 
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流查询"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/iv_logistics_query" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
         <TextView 
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="订单收货信息"
	        android:paddingLeft="20dp"
	        android:textSize="16sp"
        	/>
       <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/text_content_shap"
	        android:orientation="vertical"
	        android:padding="10dp"
        	>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="订单号:"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_order_num" 
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111111111111"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="收货人姓名:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兰陵"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="收货人电话:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_phone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13838838888"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="收货人地址:"
            android:textSize="13sp"
            />
        <TextView 
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:text="河南省郑州市高新区国家大学科技园长春路啊啊啊啊啊啊啊啊2号楼"
            />
    </LinearLayout>
    <TextView 
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="订单详情"
	        android:paddingLeft="20dp"
	        android:textSize="16sp"
        	/>
    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/text_content_shap"
	        android:orientation="vertical"
	        android:padding="10dp"
        	>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="订单状态:"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_order_state" 
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送达状态"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="送货方式:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_send_way"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="支付方式:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_pay_way"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货到付款-现金支付"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="订单生成时间:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_order_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012/9/6 09:10:10"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="发货时间:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_send_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012/9/6 09:10:10"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="是否开具发票:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_bill"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="发票抬头:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_bill_rise"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哩哩啦啦公司"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="发货要求:"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_send_request"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只工作日送货(双休日.....)"
                android:textSize="13sp"
                />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>