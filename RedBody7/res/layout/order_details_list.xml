<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/product_detail_cell_normal"
        >
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           >
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="商品名称:"
	            android:textSize="13sp"
	            />
            <TextView
                android:id="@+id/tv_product"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="裤头"
	            android:textSize="13sp"
	            />
       </LinearLayout>
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <TextView 
                android:id="@+id/tv_product_color"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="颜色:"
	            android:textSize="13sp"
	            />
            <TextView
                android:id="@+id/tv_product"
                android:layout_toRightOf="@id/tv_product_color"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="鬼知道"
	            android:textSize="13sp"
	            />
           <TextView 
                android:id="@+id/tv_size"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:text="111"
	            android:textSize="13sp"
	            />
            <TextView
                android:id="@+id/tv_product_size"
                android:layout_toLeftOf="@id/tv_size"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="尺码:"
	            android:textSize="13sp"
	            />
       </RelativeLayout>
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <TextView 
                android:id="@+id/tv_product_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="数量:"
	            android:textSize="13sp"
	            />
            <TextView
                android:id="@+id/tv_number"
                android:layout_toRightOf="@id/tv_product_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1"
	            android:textSize="13sp"
	            />
           <TextView 
                android:id="@+id/tv_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:text="$128.00"
	            android:textSize="13sp"
	            />
            <TextView
                android:id="@+id/tv_product_price"
                android:layout_toLeftOf="@id/tv_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="价格:"
	            android:textSize="13sp"
	            />
       </RelativeLayout>
    </LinearLayout>
     		<ImageView 
     		    android:id="@+id/iv_product_details"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow"
                android:onClick="prodetails"
                />
	</LinearLayout>
</LinearLayout>