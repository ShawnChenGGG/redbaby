<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="68dp"
        android:layout_height="84dp"
        android:background="#000"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/product_loading" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_img"
        android:padding="1dp"
        android:text="乳加力胶丸"
        android:textColor="#363636"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:text="原价:" />

    <TextView
        android:id="@+id/tv_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_cost"
        android:layout_below="@+id/tv_price"
        android:padding="1dp"
        android:text="限时特价:"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_special"
        android:layout_below="@+id/tv_special"
        android:padding="1dp"
        android:text="剩余时间:"
        android:textColor="#FF0000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_surplus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_special_price"
        android:layout_below="@+id/tv_special"
        android:padding="1dp"
        android:textColor="#FF0000"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_panic"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_surplus_time"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_special"
        android:background="@drawable/button_long_normal"
        android:padding="3dp"
        android:text="立即抢购"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_panic"
        android:layout_alignRight="@+id/tv_title"
        android:padding="20dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/tv_special_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_special"
        android:layout_below="@id/tv_price"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/tv_special"
        android:text="￥：111111"
        android:textColor="#FF0000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_cost"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_cost"
        android:padding="1dp"
        android:text="66.66"
        android:textSize="14sp" />

</RelativeLayout>